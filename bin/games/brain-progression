#!/usr/bin/env php
<?php

require_once __DIR__ . '/../../vendor/autoload.php';
require_once __DIR__ . '/../../src/Cli.php';
require_once __DIR__ . '/../structure';

use function cli\line;

$TYPE_GAME = 'prg';

function generate_questions_and_answers()
{
    $questions = [];
    $answers = [];

    for ($i = 0; $i < 3; $i++) {
        $factor = rand(2, 4);
        $number_start = rand(4, 100);
        $count_numbers = rand(5, 10);
        $number_hide = rand(1, $count_numbers);

        $question = 'Question:';

        for ($j = 1; $j <= $count_numbers; $j++) {
            if ($j == $number_hide) {
                $question .= ' ..';
                $answer = $number_start;
            } else {
                $question .= ' ' . $number_start;
            }
            $number_start += $factor;
        }

        $questions[] = $question;
        $answers[] = (string) $answer;
    }

    return ['questions' => $questions, 'answers' => $answers];
}

$questionsAndAnswers = generate_questions_and_answers();
start_game($questionsAndAnswers['questions'], $questionsAndAnswers['answers'], $TYPE_GAME);

